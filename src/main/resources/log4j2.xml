<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="LOG_DIR">${sys:log.dir:-./logs}</Property>
        <Property name="FILE_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %c{1.} - %msg%n</Property>
        <Property name="WIN_CHARSET">UTF-8</Property>
    </Properties>

    <Appenders>
        <!-- 全量日志（按日滚动） -->
        <RollingFile name="AllLogs"
                     fileName="${LOG_DIR}/litekv-all.log"
                     filePattern="${LOG_DIR}/archive/litekv-all-%d{yyyy-MM-dd}.log">
            <PatternLayout charset="${WIN_CHARSET}" pattern="${FILE_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

        <!-- 错误日志独立文件 -->
        <RollingFile name="ErrorLogs"
                     fileName="${LOG_DIR}/litekv-error.log"
                     filePattern="${LOG_DIR}/archive/litekv-error-%d{yyyy-MM-dd}.log">
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout charset="${WIN_CHARSET}" pattern="${FILE_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>

        <!-- 控制台输出（带ANSI彩色） -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%style{%d{HH:mm:ss.SSS}}{cyan} [%t] %highlight{%-5level}{FATAL=red, ERROR=red, WARN=yellow, INFO=green, DEBUG=blue} %c{1.} - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- 降级第三方日志 -->
        <Logger name="io.netty" level="WARN"/>
        <Logger name="io.atomix" level="WARN"/>
        <Logger name="io.prometheus.client" level="WARN"/>

        <!-- 持久化操作追踪 -->
        <Logger name="com.linyi.litekvdb.persistence" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AllLogs"/>
        </Logger>

        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AllLogs"/>
            <AppenderRef ref="ErrorLogs"/>
        </Root>
    </Loggers>
</Configuration>
